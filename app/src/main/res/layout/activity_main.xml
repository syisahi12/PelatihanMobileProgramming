<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!--   TAMPILKAN VIEW IMAGEVIEW DI TENGAH LAYOUT  MENGGUNAKAN-->
<!--    LAYOUT LINEARLAYOUT-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/amcclogo"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMCC 2020"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="36sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"/>

    </LinearLayout>

<!--    langkah-langkahnya-->

<!--    1. Rubah layout contraint menjadi linear layout
        2. tambahkan view ImageView untuk menampilkan gambar
        3. dan tammpilka gambar di tengah layout
                                                        -->


</androidx.constraintlayout.widget.ConstraintLayout>